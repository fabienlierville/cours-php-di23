{% extends "base.html.twig" %}

{% block title %} Admin > Liste des articles {% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Titre</th>
                <th scope="col">Date de Publication</th>
                <th scope="col">Auteur</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="/?controller=AdminArticle&action=update&param={{ article.Id }}">{{ article.Id }}</a></td>
                <td><a href="/?controller=Article&action=show&param={{ article.Id }}">{{ article.Titre }}</a></td>
                <td>{{ article.DatePublication|date('d/m/Y') }}</td>
                <td>{{ article.Auteur }}</td>
                <td><a href="/?controller=AdminArticle&action=delete&param={{ article.Id }}"><i class="bi bi-trash"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}